datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Poll {
  id          Int         @id @default(autoincrement())
  challongeId Int         @unique
  active      Boolean?    @default(value: true)
  entries     PollEntry[]
}

model PollEntry {
  id          Int    @id @default(autoincrement())
  challongeId Int    @unique
  name        String @unique
  votes       Int
  Poll        Poll   @relation(fields: [pollId], references: [id])
  pollId      Int    @unique
}

model User {
  id       String  @unique
  limited  Int[]
  ip       String?
  verified String? @unique
}
