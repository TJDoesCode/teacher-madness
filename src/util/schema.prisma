datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Poll {
  id          Int         @id @default(autoincrement())
  challongeId Int
  active      Boolean?    @default(value: true)
  entries     PollEntry[]
  limits      Ratelimit[]

  @@unique([id, challongeId])
}

model PollEntry {
  id          Int    @id @default(autoincrement())
  challongeId Int
  name        String
  votes       Int
  Poll        Poll   @relation(fields: [pollId], references: [id])
  pollId      Int

  @@unique([id, pollId])
}

model User {
  id       String      @unique
  ip       String?
  verified String?     @unique
  limits   Ratelimit[]
}

model Ratelimit {
  time   DateTime
  poll   Poll     @relation(fields: [pollId], references: [id])
  user   User     @relation(fields: [userId], references: [id])
  pollId Int
  userId String

  @@id([pollId, userId])
}
